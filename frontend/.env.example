# =============================================================================
# Frontend Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# Backend API Configuration
# -----------------------------------------------------------------------------
# URL of the backend API server
VITE_API_URL=http://localhost:8000

# -----------------------------------------------------------------------------
# Site Configuration
# -----------------------------------------------------------------------------
# Public URL of the frontend (used for social sharing, etc.)
VITE_SITE_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
# Enable/disable chatbot feature
VITE_ENABLE_CHATBOT=true

# Enable/disable quiz feature
VITE_ENABLE_QUIZZES=true

# Enable/disable user authentication
VITE_ENABLE_AUTH=true

# -----------------------------------------------------------------------------
# Analytics (optional)
# -----------------------------------------------------------------------------
# Google Analytics ID (leave empty to disable)
# VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# -----------------------------------------------------------------------------
# Development
# -----------------------------------------------------------------------------
# Enable debug logging in console
VITE_DEBUG=true
